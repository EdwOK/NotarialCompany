<controls:MetroContentControl  
    x:Class="NotarialCompany.Pages.EmployeesPage.EmployeeDetailsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:NotarialCompany.Pages.ServicesPage"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    DataContext="{Binding EmployeeDetailsViewModel, Source={StaticResource Locator}}"
    mc:Ignorable="d" 
    d:DesignHeight="400" d:DesignWidth="1000">
    <Grid VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="150"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontWeight="Bold" Margin="10,10,10,10">Clients Details</Label>
        <Label Grid.Row="1" Grid.Column="0" Margin="10,10,10,10">First Name</Label>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="0,10,0,10" Text="{Binding FirstName, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <Label Grid.Row="2" Grid.Column="0" Margin="10,10,10,10">Middle Name</Label>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="0,10,0,10" Text="{Binding MiddleName, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <Label Grid.Row="3" Grid.Column="0" Margin="10,10,10,10">Last Name</Label>
        <TextBox Grid.Row="3" Grid.Column="1" Margin="0,10,0,10" Text="{Binding LastName, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <Label Grid.Row="4" Grid.Column="0" Margin="10,10,10,10">Employment Date</Label>
        <DatePicker Grid.Row="4" Grid.Column="1" Margin="0,10,0,10" SelectedDate="{Binding EmploymentDate, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <Label Grid.Row="5" Grid.Column="0" Margin="10,10,10,10">Address</Label>
        <TextBox Grid.Row="5" Grid.Column="1" Margin="0,10,0,10" Text="{Binding Address, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <Label Grid.Row="6" Grid.Column="0" Margin="10,10,10,10">PhoneNumber</Label>
        <TextBox Grid.Row="6" Grid.Column="1" Margin="0,10,0,10" Text="{Binding PhoneNumber, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <Label Grid.Row="7" Grid.Column="0" Margin="10,10,10,10">Position</Label>
        <ComboBox Grid.Row="7" Grid.Column="1" Margin="0,10,0,10" ItemsSource="{Binding EmployeesPositions}" DisplayMemberPath="Position" SelectedItem="{Binding SelectedEmployeesPosition, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Command="{Binding NavigateBackCommand}" Margin="0,0,5,0">Cancel</Button>
            <Button Command="{Binding SaveCommand}" Margin="5,0,0,0">Save</Button>
        </StackPanel>
    </Grid>
</controls:MetroContentControl>
